{
  "name": "asterism",
  "version": "0.14.3",
  "description": "Extensible & dynamic dashboard platform",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "start:dist": "npm run dist && cross-env NODE_ENV=production node example/dist.js",
    "start": "cross-env NODE_ENV=development nodemon --watch lib/server --watch lib/plugins example/hot-reload.js",
    "start:debug": "cross-env NODE_ENV=development DEBUG=* nodemon --watch lib/server example/hot-reload.js",
    "dist": "rimraf dist && babel lib --comments false --compact true --out-dir dist",
    "prepublishOnly": "npm run dist",
    "gen:cert": "./generate-certificates.sh",
    "lint": "standard --verbose | snazzy",
    "test": "npm run dist && cross-env NODE_ENV=test mocha --require ignore-styles",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/asterism"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/asterism/issues"
  },
  "homepage": "https://github.com/gxapplications/asterism",
  "keywords": [
    "gridifier",
    "react",
    "material",
    "asterism",
    "domotics"
  ],
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 3.10.8"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": ["transform-object-rest-spread"],
    "env": {
      "development": {
        "plugins": [
          [
            "css-modules-transform",
            {
              "preprocessCss": "./babel-sass-preprocess.js",
              "generateScopedName": "[local]",
              "extractCss": {
                "dir": "./dist/styles/",
                "relativeRoot": "./lib/",
                "filename": "[name].css"
              },
              "extensions": [
                ".css",
                ".sass",
                ".scss"
              ]
            }
          ]
        ]
      }
    }
  },
  "standard": {
    "env": {
      "node": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/doc/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "annyang": "^2.6.0",
    "asterism-plugin-library": ">= 1.8.8",
    "babel-loader": "7.1.4",
    "babel-plugin-css-modules-transform": "1.5.0",
    "babel-plugin-transform-object-rest-spread": "6.23.x",
    "babel-preset-env": "1.6.x",
    "babel-preset-react": "6.24.x",
    "babili-webpack-plugin": "0.1.x",
    "body-parser": "1.x",
    "camelopard": "0.7.x",
    "classnames": "2.2.x",
    "colors": "1.1.x",
    "css-loader": "0.28.x",
    "debounce": "1.x",
    "expose-loader": "0.7.x",
    "express": "4.16.x",
    "express-ipfilter": "0.3.x",
    "extract-text-webpack-plugin": "3.x",
    "felicity": "2.4.x",
    "file-loader": "0.11.x",
    "imports-loader": "0.7.x",
    "joi": "13.x",
    "joi-browser": "13.x",
    "materialize-css": "0.98.x",
    "node-sass": "4.6.x",
    "nosql": "6.1.x",
    "object-path": "0.11.x",
    "prop-types": "15.6.x",
    "react": "15.6.x",
    "react-color": "2.13.x",
    "react-gridifier": ">= 0.4.2",
    "react-hot-loader": "3.1.x",
    "react-materialize": "1.0.x",
    "react-transition-group": "1.2.x",
    "sass-loader": "6.0.x",
    "sha1": "1.x",
    "socket.io": "2.0.x",
    "style-loader": "0.18.x",
    "tsort": "0.0.1",
    "uuid": "3.x",
    "validate-npm-package-name": "3.x",
    "webpack": "3.x",
    "webpack-dev-middleware": "1.12.x",
    "webpack-hot-middleware": "2.x"
  },
  "devDependencies": {
    "babel-cli": "6.26.x",
    "babel-core": "6.26.x",
    "babel-eslint": "6.1.x",
    "chai": "4.x",
    "cross-env": "^5.x",
    "enzyme": "2.x",
    "ignore-styles": "5.x",
    "jsdom": "11.x",
    "mocha": "3.x",
    "nodemon": "1.x",
    "precommit-hook": "3.0.0",
    "react-addons-test-utils": "15.6.x",
    "react-dom": "15.6.x",
    "rimraf": "2.x",
    "snazzy": "7.x",
    "standard": "10.x",
    "webpack-dev-server": "2.x"
  },
  "directories": {
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
