{
  "name": "asterism",
  "version": "0.0.14",
  "description": "Extensible dashboard platform for domotics",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "start:component": "webpack-dev-server --config example/webpack.config.js --no-info --progress --inline",
    "start:dist": "npm run dist && cross-env NODE_ENV=production node example/dist.js",
    "start": "cross-env NODE_ENV=development nodemon --watch lib/server example/hot-reload.js",
    "dist": "rimraf dist && babel lib --presets=babel-preset-node7,babel-preset-es2017-node7/webpack2,react-es2015 --out-dir dist",
    "prepublish": "npm run dist",
    "doc:jsdoc": "jsdoc --package package.json --readme README.md --destination doc/jsdoc/ lib/**",
    "doc:coverage": "cross-env NODE_ENV=test nyc --require babel-core/register --reporter=lcov mocha && rimraf .nyc_output",
    "doc": "rimraf doc && npm run doc:jsdoc && groc && npm run doc:coverage",
    "lint": "standard --verbose | snazzy",
    "test": "npm run dist && cross-env NODE_ENV=test mocha --require ignore-styles",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/asterism"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/asterism/issues"
  },
  "homepage": "https://github.com/gxapplications/asterism",
  "keywords": [
    "gridifier",
    "react",
    "material",
    "asterism",
    "domotics"
  ],
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 3.10.8"
  },
  "babel": {
    "presets": [
      "node7",
      "es2017-node7/webpack2",
      "react-es2015"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "css-modules-transform",
            {
              "generateScopedName": "[local]",
              "extractCss": "./dist/styles.css"
            }
          ]
        ]
      }
    }
  },
  "standard": {
    "env": {
      "node": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/doc/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "nyc": {
    "lines": 40,
    "check-coverage": true,
    "report-dir": "./doc/coverage",
    "include": [
      "lib/**"
    ]
  },
  "dependencies": {
    "babel-loader": "^7.1.1",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-preset-es2017-node7": "^0.5.2",
    "babel-preset-node7": "^1.5.0",
    "babel-preset-react-es2015": "^1.3.0",
    "babili-webpack-plugin": "^0.1.2",
    "body-parser": "^1.17.2",
    "classnames": "^2.2.5",
    "colors": "^1.1.2",
    "css-loader": "^0.28.4",
    "debounce": "^1.0.2",
    "expose-loader": "^0.7.3",
    "express": "^4.15.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "imports-loader": "^0.7.1",
    "joi": "^10.6.0",
    "materialize-css": "^0.98.2",
    "nosql": "^5.0.3",
    "object-path": "^0.11.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-color": "^2.13.4",
    "react-gridifier": "^0.2.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-materialize": "^1.0.10",
    "react-transition-group": "^1.2.0",
    "style-loader": "^0.18.2",
    "uuid": "^3.0.1",
    "webpack": "^3.5.5",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0",
    "chai": "^4.1.0",
    "cross-env": "^1.0.7",
    "enzyme": "^2.8.2",
    "groc": "^0.8.0",
    "ignore-styles": "^5.0.1",
    "jsdoc": "^3.5.3",
    "jsdom": "^11.1.0",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^6.1.1",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "rimraf": "^2.5.2",
    "snazzy": "^7.0.0",
    "standard": "^6.0.1",
    "webpack-dev-server": "^2.7.1"
  },
  "directories": {
    "doc": "./doc",
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
