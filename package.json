{
  "name": "asterism",
  "version": "0.0.1",
  "description": "Extensible dashboard platform for domotics",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "MIT. This is open source. But please take care of the Gridifier license: http://gridifier.io/license",
  "scripts": {
    "start:component": "webpack-dev-server --config example/webpack.config.js --no-info --progress --inline",
    "start::dist": "node dist/index.js",
    "start": "node example/live.js",
    "dist": "babel lib --presets babel-preset-es2015-node6 --presets babel-preset-stage-2 --out-dir dist",
    "prepublish": "npm run dist",
    "doc:jsdoc": "jsdoc --package package.json --readme README.md --destination doc/jsdoc/ lib/**",
    "doc:coverage": "cross-env NODE_ENV=test nyc --require babel-core/register --reporter=lcov mocha && rimraf .nyc_output",
    "doc": "rimraf doc && npm run doc:jsdoc && groc && npm run doc:coverage",
    "lint": "standard --verbose | snazzy",
    "test": "npm run dist && cross-env NODE_ENV=test mocha --require ignore-styles",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/asterism"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/asterism/issues"
  },
  "homepage": "https://github.com/gxapplications/asterism",
  "keywords": [
    "gridifier",
    "react",
    "material",
    "asterism",
    "domotics"
  ],
  "engines": {
    "node": ">= 6.9.1",
    "npm": ">= 3.10.8"
  },
  "babel": {
    "presets": [
      "es2015-node6",
      "stage-2",
      "react"
    ],
    "plugins": [
      [
        "css-modules-transform",
        {
          "generateScopedName": "[local]",
          "extractCss": "./dist/styles.css"
        }
      ]
    ]
  },
  "standard": {
    "env": {
      "node": true
    },
    "parser": "babel-eslint",
    "ignore": [
      "/doc/"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "nyc": {
    "lines": 40,
    "check-coverage": true,
    "report-dir": "./doc/coverage",
    "include": [
      "lib/**"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "materialize-css": "^0.98.2",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-gridifier": "^0.1.1",
    "react-materialize": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.5.0",
    "chai": "^4.0.1",
    "colors": "^1.1.2",
    "cross-env": "^1.0.7",
    "css-loader": "^0.28.4",
    "enzyme": "^2.8.2",
    "groc": "^0.8.0",
    "ignore-styles": "^5.0.1",
    "jsdoc": "^3.4.0",
    "jsdom": "^11.0.0",
    "mocha": "^3.4.2",
    "nyc": "^6.1.1",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.6.0",
    "react-dom": "^15.6.1",
    "rimraf": "^2.5.2",
    "snazzy": "^7.0.0",
    "standard": "^6.0.1",
    "style-loader": "^0.18.2",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "directories": {
    "doc": "./doc",
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
